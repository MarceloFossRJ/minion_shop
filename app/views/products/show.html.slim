
div.table-responsive
  table.table
    tbody
        tr
          td = image_tag @product.image.big.url
          td
            p
              strong Nome
              br
              = @product.name
            p
              strong Descrição
              br
              = @product.description
              p
                = simple_form_for :basket, url: basket_path(@product), method: :put do |f|
                  .form-inputs
                    = f.input :quantidade, input_html: {:style => 'width: 50px', value: session[:current_basket].nil? ? '1':session[:current_basket][@product.id.to_s]||'1'}

                  .form-actions
                    =< link_to 'Voltar', products_path, class: 'btn btn-default'
                    =< f.button :submit, 'Adicionar a cesta', class: 'btn btn-primary'










